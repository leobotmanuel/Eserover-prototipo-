  spec ' ' 'move' 'mover _ a velocidad _' 'menu.esero_action menu.esero_velocity' 'adelante' '0'
  spec ' ' 'Setup' 'configurar pines izqd. _ derch. _' 'auto auto' '' ''

to Setup pinL pinR {
  _pinLeftRover = pinL
  _pinRightRover = pinR
}

to move action velocity {
  if (action == 'adelante') {
    local 'direction0' -1
    local 'direction1' 1
  } (action == 'atrás') {
    local 'direction0' 1
    local 'direction1' -1
  } (action == 'derecha') {
    local 'direction0' -1
    local 'direction1' -1
